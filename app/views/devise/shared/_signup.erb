<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => {:class => "form login"}) do |f| %>
<div class='well span5'>
	<h3>Create an account</h3>
    <div class="control-group">
      <div class="controls">
        <%= f.text_field :email, :class => 'text_field span10', :placeholder => "email" %>
      </div>
    </div>
    <div class="control-group">
      <div class="controls">
        <%= f.text_field :name, :class => 'text_field span10', :placeholder => "name" %>
      </div>
    </div>
    <div class="control-group">
      <div class="controls">
        <%= f.password_field :password, :class => 'text_field span10', :placeholder => "password" %>
      </div>
    </div>
    <div class="control-group">
      <div class="controls">
        <%= f.password_field :password_confirmation, :class => 'text_field span10', :placeholder => "password confirmation" %>
      </div>
    </div>
    <div class="control-group">
      <%= f.submit nil, :class => 'btn btn-info' %>
      <%= link_to 'Cancel', home_index_path, :class => 'btn' %>
    </div>
</div>
<% end %>
