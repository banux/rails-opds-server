<%= form_for @book, :html => { :class => 'form-horizontal', :multipart => true } do |f| %>
  <fieldset>
    <legend>New Book</legend>

    <div class="control-group">
      <%= f.label :epub, :class => 'control-label' %>
      <div class="controls">
        <%= f.file_field :epub %>
      </div>
    </div>



    <div class="control-group">
      <%= f.label :catalog, :class => 'control-label' %>
      <div class="controls">
        <%= select("catalog", "id", Catalog.where(:user_id => current_user.id).map {|c| [c.title,c.id]}, {:prompt => 'Select Catalog'}) %>
      </div>
    </div>

    <div class="form-actions">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to 'Cancel', books_path, :class => 'btn' %>
    </div>
  </fieldset>
<% end %>

